rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // ==========================================
    // Helper Functions
    // ==========================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserData() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data : null;
    }
    
    function isAdmin() {
      let data = getUserData();
      return isAuthenticated() && data != null && data.role == 'admin';
    }
    
    function isEquipe() {
      let data = getUserData();
      return isAuthenticated() && data != null && data.role == 'equipe';
    }
    
    function isStaff() {
      return isAdmin() || isEquipe();
    }
    
    function isCliente() {
      let data = getUserData();
      return isAuthenticated() && data != null && data.role == 'cliente' && data.status == 'ativo';
    }
    
    // ==========================================
    // Rules per Collection
    // ==========================================
    
    match /users/{userId} {
      // User can read their own doc; Staff can read anyone
      allow read: if request.auth != null && (request.auth.uid == userId || isStaff());
      
      // On registration, allow create with strict defaults
      allow create: if request.auth != null 
                    && request.auth.uid == userId 
                    && request.resource.data.role == 'cliente' 
                    && request.resource.data.status == 'aguardando_aprovacao';
                    
      // User can update their own data but NOT their role or status. Staff can update anything.
      allow update: if isStaff() || 
                    (request.auth.uid == userId 
                     && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'status']));
                     
      allow delete: if isAdmin();
    }
    
    match /clients/{clientId} {
      // Clients can only read their own profile (linked via users doc, but for simplicity they can query where email/etc match, or we enforce via server/function. 
      // Safe bet: if they have the clientId, they can read it (we control delivery). But safer: userId mapping)
      // For now, let's say client can read if it's their company.
      // Staff can read/write all.
      allow read: if isStaff() || (isCliente() && getUserData().clientId == clientId);
      allow write: if isStaff();
    }
    
    match /products/{productId} {
      // Active clients and staff can view products
      allow read: if isCliente() || isStaff();
      // Only staff can manage products
      allow write: if isStaff();
    }
    
    match /categories/{categoryId} {
      allow read: if isCliente() || isStaff();
      allow write: if isStaff();
    }
    
    match /priceTables/{tableId} {
      allow read: if isStaff();
      // A client should usually only fetch price tables linked to them.
      allow write: if isAdmin();
    }

    match /orders/{orderId} {
      // Clients can see and create their own orders
      allow create: if isCliente() && request.resource.data.userId == request.auth.uid;
      allow read: if isStaff() || (isCliente() && resource.data.userId == request.auth.uid);
      // Only staff can update orders (e.g. status)
      // (Optionally client could cancel an order if status is 'novo', but let's keep it tight)
      allow update: if isStaff();
      allow delete: if isAdmin();
    }
    
    // Configurações Globais / Settings
    match /settings/{docId} {
      allow read: if isAuthenticated(); // Needs read for selects (transportadoras, pagamentos)
      allow write: if isAdmin();
    }
  }
}
